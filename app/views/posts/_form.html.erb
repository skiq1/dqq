<%= form_with(model: post, class: "d-block justify-content-end") do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :redirect_checkbox, "Enable Redirect Only Mode" %>
    <%= check_box_tag "redirect_checkbox", "1", false, id: "redirect_checkbox", class: "form-check-input" %><br>
    <small class="form-text text-light">If checked, other fields will be ignored.</small>
  </div>

  <div class="form-group">
    <%= form.label :slug, style: "display: block" %>
    <%= form.text_field :slug, class: "form-control" %>
    <small class="form-text text-light">allowed characters: a-z A-Z 0-9 - _ + <br>(leave blank to random string)</small>
  </div>

  <div class="form-group d-none" id="redirect_url_group">
    <%= form.label :redirect_url %>
    <%= form.text_field :redirect_url, class: "form-control" %>
    <small class="form-text text-light">If filled, this post will redirect instead of <br>displaying content.</small>
  </div>


  <div id="post_fields">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mt-1">
      <%= form.label :status, style: "display: block" %>
      <%= form.select :status, Post.statuses.keys[0..-3], {}, { :class => "form-select" } %>
    </div>

    <div class="form-group mt-2">
      <%= form.label :files, "Upload Files" %>
      <%= form.file_field :files, multiple: true, class: "form-control" %>
    </div>

    <div class="form-group mt-2 <% if current_user %> d-none <% end %>">
      <%= form.label :username %> <b class="text-danger">(required)</b>
      <%= form.text_field :username, class: "form-control" %>
      <small class="form-text text-light">assign Post to an account </small>
    </div>
  </div>


  <div class="actions mt-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  function toggleRedirectFields() {
    const checkbox = document.getElementById("redirect_checkbox");
    const redirectUrlGroup = document.getElementById("redirect_url_group");
    const postFields = document.getElementById("post_fields");

    if (!checkbox || !redirectUrlGroup || !postFields) return;

    if (checkbox.checked) {
      redirectUrlGroup.classList.remove("d-none");
      postFields.classList.add("d-none");
    } else {
      redirectUrlGroup.classList.add("d-none");
      postFields.classList.remove("d-none");
    }
  }

  document.addEventListener("turbo:load", toggleRedirectFields);
  document.addEventListener("turbo:render", toggleRedirectFields);
  document.addEventListener("DOMContentLoaded", toggleRedirectFields);

  document.addEventListener("change", function (event) {
    if (event.target.id === "redirect_checkbox") {
      toggleRedirectFields();
    }
  });
</script>
