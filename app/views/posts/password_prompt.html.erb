<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-dark text-light border-secondary">
        <div class="card-body">
          <h4 class="card-title">Post Protected</h4>
          <p class="card-text">This post requires a password to view.</p>

          <%= form_with url: verify_post_password_path(@post), method: :post, local: true do |f| %>
            <div class="form-group mb-3">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control bg-secondary text-light border-secondary", placeholder: "Enter password", autofocus: true %>
            </div>
            <%= f.submit "Unlock", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
