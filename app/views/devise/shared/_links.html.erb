<div class="devise-links">
  <%- if controller_name != 'sessions' %>
    <p><%= link_to "Log in", new_session_path(resource_name), class: "link-primary text-decoration-none" %></p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p><%= link_to "Sign up", new_registration_path(resource_name), class: "link-primary text-decoration-none" %></p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-primary text-decoration-none" %></p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-primary text-decoration-none" %></p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link-primary text-decoration-none" %></p>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="mt-3">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="d-grid gap-2 mb-2">
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-secondary", data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .devise-links p {
    margin-bottom: 0.5rem;
  }
</style>
